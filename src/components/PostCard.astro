---
export interface Props {
  count: number;
  post: any; // using any for now, better to use CollectionEntry
  slug: string;
  noLink?: boolean; // If true, don't wrap in link and don't show hover labels
  imagePosition?: 'top' | 'center'; // 'top' shows top of image (e.g. for Bio portrait)
}

const { count, post, slug, noLink = false, imagePosition } = Astro.props;
const thumbnail = post.data.thumbnail;
const title = post.data.title;
const isLarge = count % 3 === 0;

// Construct background image style (imagePosition 'top' shows top of image, e.g. eye)
const bgStyle = thumbnail
  ? `background-image: url(${thumbnail});${imagePosition === 'top' ? ' background-position: top center; background-size: cover;' : ''}`
  : '';
const postClass = `post-card ${isLarge ? 'post-card-large' : ''} ${thumbnail ? 'with-image' : 'no-image'} ${noLink ? 'no-link' : ''} post`;
---

<article class={postClass} style={bgStyle}>
  {noLink ? (
    <div class="post-card-wrapper">
      {thumbnail && <img src={thumbnail} alt={title} class="post-card-image" />}
    </div>
  ) : (
    <a href={`/${slug}`} class="post-card-link">
      <div class="post-card-content">
        <h2 class="post-card-title">
          {title}
        </h2>
      </div>
    </a>
  )}
</article>

<style>
/* Post Feed */
.post-card {
  position: relative;
  flex: 1 0 auto;
  display: flex;
  position: relative;
  height: 35vw;
  background: linear-gradient(135deg, #1f1f1f 0%, #111 100%) center center;
  background-size: cover;
  overflow: hidden;
  counter-increment: posts;
  margin: 1rem;
  border-radius: 12px;
}

/* No-link mode: show full image, no hover labels */
.post-card.no-link {
  background: transparent;
  height: auto;
  aspect-ratio: auto;
  border-radius: 0 !important;
  overflow: visible !important;
}

.post-card.no-link .post-card-wrapper {
  width: 100%;
  display: block;
  overflow: visible;
}

.post-card.no-link .post-card-image {
  width: 100%;
  height: auto;
  max-width: 100%;
  display: block;
  object-fit: contain;
  border-radius: 0 !important;
}

@media (max-width: 700px) {
  .post-card {
    flex: 1 1 100%;
    height: 70vw;
  }
  
  .post-card.no-link {
    height: auto;
  }
}

.post-card-large {
  flex: 1 1 100%;
}

.post-card-link {
  flex: 1 1 auto;
  display: block;
  text-decoration: none; /* Reset anchor default */
}

.post-card-content {
  flex: 1 1 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  color: #fff;
  background: rgba(0, 0, 0, 0.6); /* increased opacity */
  opacity: 1;
  transition: opacity 0.5s cubic-bezier(0.33, 0, 0.2, 1);
  /* Ensure content is strictly centered and readable */
}

.post-card.with-image .post-card-content {
  opacity: 0;
}

@media (max-width: 700px) {
  .post-card.with-image .post-card-content {
    opacity: 1;
  }
}

.post-card-link:hover .post-card-content {
  opacity: 1;
  transition: opacity 0.3s cubic-bezier(0.33, 0, 0.2, 1);
}

.post-card-title {
  margin: 0;
  display: inline-block;
  font-size: 3.4rem;
  max-width: 70%;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.33, 0, 0.2, 1);
  text-shadow: 0px 0px 6px black;
  font-family: var(--font-sans-serif);
  font-variant: small-caps;
  text-transform: lowercase;
  font-weight: 300;
}

/* Posts without images */
.post-card.no-image::before {
  display: block;
  content: counter(posts);
  position: absolute;
  bottom: -0.15em;
  right: 5vw;
  font-size: 28vw;
  line-height: 1em;
  font-weight: var(--font-heavy); /* Needs vars.css */
  letter-spacing: -0.1em;
  color: rgba(0, 0, 0, 0.2);
}

.post-card.no-image .post-card-content {
  justify-content: flex-start;
  align-items: flex-start;
  padding: 4vw;
}

.post-card.no-image .post-card-title {
  font-size: 5rem;
  line-height: 1.15em;
  text-align: left;
}

.post-card.no-image:hover .post-card-title {
  text-decoration: underline;
}

@media (max-width: 1200px) {
  .post-card.no-image .post-card-title {
    font-size: 3.4rem;
  }
}
@media (max-width: 700px) {
  .post-card.no-image::before {
    font-size: 50vw;
  }
}
</style>
